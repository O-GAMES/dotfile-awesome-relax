configuration {
    font: "FiraSans 10";
    sidebar-mode: true;
    show-icons: true;
    fullscreen: false;
    threads: 0;
    matching: "fuzzy";
    scroll-method: 0;
//    monitor: "primary";
    disable-history:      false;
    modi: "window,run,ssh,drun,combi";
    combi-hide-mode-prefix: true;
    combi-modi: "drun,ssh,keys,run";

filebrowser {
  directories-first:    true;
  sorting-method:       "name";
  }
}


@theme "/dev/null"
* {
    transparent: #00000000;
    fg: #A29F9F;
//    bgsel: #15181E;
    bgsel: #171A1F;
    fgsel: #8fbcbb;
    bg: #0F1013;
    bgalt: #171A1F;
    urgent: #D46489;
}

window {
    background-color: @bg;
    text-color: @fg;
    location: west;
    anchor: west;
    y-offset: -52;
    x-offset: 9;
    height: 77%;
    width: 450px;
    orientation: vertical;
}

prompt {
    enabled: false;
}

button {
    action: "ok";
    str: "ï€‚ ";
    font: "FiraCode Nerd Font 16";
    expand: false;
    text-color: @fg;
    background-color: @bgalt;
    vertical-align: 0.5;
    horizontal-align: 0.5;
    
}

entry {
    font: "FiraSans 12";
    background-color: @bgalt;
    text-color: @fg;
    expand: true;
    vertical-align: 0.5;
    horizontal-align: 0;
    placeholder: "Search";
    placeholder-color: @fg;
    blink: true;
}

entry-wrapper {
    orientation: horizontal;
    margin: 0 12px 0 12px;
    spacing: 24px;
    vertical-align: 0.5;
    background-color: @bgalt;
    children: [ button, entry ];
}

inputbar {
    padding: 14px;
    margin: 10px 10px 14px 10px;
    background-color: @bgalt;
    text-color: @fg;
    expand: false;
    border-radius: 12px;
    position: north;
    children: [ entry-wrapper ];
}

listview {
    background-color: @bg;
    spacing: 0;
    cycle: true;
    dynamic: true;
    scrollbar: true;
}

mainbox {
    width: 200px;
    expand: true;
    spacing: 12px;
    padding: 5px;
    background-color: @bg;
    children: [ inputbar, listview ];
}

scrollbar {
    background-color: @bgalt;
    handle-width: 0;
    margin: 0 0 5px 0;
    border-radius: 12px;
}

element {
    background-color: @transparent;
    text-color: @fg;
    orientation: horizontal;
    border: 0;
    border-color: @fg;
    border-radius: 12px;
    spacing: 24px;
    margin: 0px 12px 0px 12px;
    padding: 10px 24px 10px 24px;
}

element-icon {
    size: 33px;
    border: 0;
    border-color: @transparent;
    background-color:	inherit;
    text-color:		inherit;
}

element-text {
    font: "FiraSans 11";
    expand: true;
    horizontal-align: 0;
    vertical-align: 0.5;
    background-color:	inherit;
    text-color:		inherit;
}

element normal.urgent,
element alternate.urgent {
    background-color: @urgent;
    text-color: @fg;
    border-radius: 12px;
}

element normal.active,
element alternate.active {
    background-color: @background-active;
    text-color: @fg;
}

element selected {
    background-color: @bgsel;
    text-color: @fgsel;
}

element selected.urgent {
    background-color: @urgent;
    text-color: @fgsel;
}

element selected.active {
    background-color: @bgsel;
    color: @fgsel;
}


